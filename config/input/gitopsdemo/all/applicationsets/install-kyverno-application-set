apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: install-kyverno-application-set
  namespace: kyverno
spec:
  generators:
    - clusterDecisionResource:
        configMapRef: acm-placement
        labelSelector:
          matchLabels:
            cluster.open-cluster-management.io/placement: kyverno
        requeueAfterSeconds: 180
  template:
    metadata:
      name: policies-appset-{{name}}
    spec:
      project: kyverno-project
      source:
        repoURL: https://github.com/ch-stark/maptoseveralstandards/
        targetRevision: main
        path: config/input/gitopsdemo/all/kyverno
      destination:
        namespace: kyverno
        server: "{{server}}"
      syncPolicy:
        syncOptions:
          - CreateNamespace=true
        automated:
          selfHeal: true
